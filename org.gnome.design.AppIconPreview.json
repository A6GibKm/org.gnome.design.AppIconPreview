{
  "app-id": "org.gnome.design.AppIconPreview",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "command": "app-icon-preview",
  "sdk-extensions" : [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "finish-args": [
    "--share=ipc",
    "--device=dri",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--filesystem=home"
  ],
  "build-options" : {
    "append-path" : "/usr/lib/sdk/rust-stable/bin",
    "env" : {
      "CARGO_HOME" : "/run/build/app-icon-preview/cargo"
    }
  },
  "modules": [
    {
      "name": "libhandy",
      "buildsystem": "meson",
      "config-opts": [
        "-Dintrospection=disabled",
        "-Dgtk_doc=false",
        "-Dtests=false",
        "-Dexamples=false",
        "-Dvapi=false",
        "-Dglade_catalog=disabled"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://source.puri.sm/Librem5/libhandy.git",
          "tag": "v0.0.13",
          "commit": "7a193d7692c9c76a1a94f17c4d30b585f77d177c"
        }
      ],
      "cleanup": ["/bin"]
    },
    {
      "name": "app-icon-preview",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/World/design/app-icon-preview/uploads/dba837f02f761d40c910ea8b0ffc409d/app-icon-preview-2.0.0.tar.xz",
          "sha256": "cbbda53cbb965787404936cb3b725d27b8761908bc9ec0c27004fd7569233bae"
        },
        {
            "type": "patch",
            "path": "appdata_screenshot_size.patch"
        }
      ]
    }
  ]
}
